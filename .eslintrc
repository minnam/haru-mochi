{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended", 
        "standard", 
        "prettier",
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-paren": ["error", "always"],
        "no-console": 0,
        "no-trailing-spaces": ["error"],
        "no-multiple-empty-lines": ["error"],
        "indent": ["error", 2],
        "no-class-assign": 0,
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-var": ["error"],
        "prefer-const": ["error"],
        "arrow-spacing" : ["error"]
    }
}